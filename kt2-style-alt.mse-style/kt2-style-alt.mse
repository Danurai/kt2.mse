		top:			255
		width:		{ stat_box_width }
		height:		{ stat_box_height }
		z index:	10
		alignment: center middle
		font:
			name:		{ hfont }
			size:		{ stat_font_size }
			color:	{ styling.Title_Colour }
			
	stat apl:
		right:		{ w - 54 }
