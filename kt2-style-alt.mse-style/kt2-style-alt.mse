			size:		{ stat_font_size }
			color:	{ styling.Title_Colour }

	w1type:
		left:			{ w_left }
		top:			{ w_top + 5 }
		width:		{ 20  }
		height:		{ w_height - 10 }
		render style: image
		choice images:
			Ranged: 			/kt2-common.mse-include/resource/marksman.png
			Ranged Ammo: 	/kt2-common.mse-include/resource/marksman.png
			Combat: 			/kt2-common.mse-include/resource/combat.png
		z index:	10
	w1name:
		left:			{ w_left + get_w_left(id: 1) }
		top:			{ w_top }
		width:		{ if card.w1type == "Ranged Ammo" then get_w_left(id: 8) - w_width[0] else w_width[1] }
		height:		{ w_height }
		z index:	10
		alignment:	left middle shrink if-overflow
		font:
			name:			{ bfont }
			size:			14
