extra card field:
	type:				color
	name:				background
	editable:		false
	save value:	false
	show statistics:	false
	script:			if card.type == "Equipment" then rgb(0,0,100) else if card.type == "Strategic Ploy" then rgb(120,120,120) else rgb(0,0,0)
extra card field:
	type:		text
	name:		type_caps
	editable:		false
	save value:	false
	show statistics: false
	script:	to_upper(card.type)
extra card field:
	type:		text
	name:		cost_caps
	save value:	false
	show statistics: false
	script:	if card.type == "Equipment" then "[{card.cost} EP]" else "{card.cost} AP"

